<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginEnd="14dp"
                                    android:layout_marginStart="14dp"
                                    android:layout_marginTop="7dp"
                                    android:background="@null"
                                    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_ripple"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pokemon_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/pokemon_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/pokemon_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pokemon_4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/pokemon_5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:scaleType="fitCenter"/>

                <ImageView
                    android:id="@+id/pokemon_6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:scaleType="fitCenter"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pokemon"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_label"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_updated"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>