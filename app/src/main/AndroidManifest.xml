<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.app.main.pokebase"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_pokeball"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainTheme"
        tools:replace="android:theme">
        <activity
            android:name=".gui.activities.SplashActivity"
            android:configChanges="orientation"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.activities.IntroActivity"
            android:configChanges="orientation"
            android:theme="@style/StartTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.SignUpActivity"
            android:configChanges="orientation"
            android:theme="@style/StartTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.GenderActivity"
            android:configChanges="orientation"
            android:theme="@style/StartTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MainTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.TeamViewActivity"
            android:configChanges="orientation"
            android:theme="@style/MainTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.PokemonProfileActivity"
            android:configChanges="orientation"
            android:theme="@style/PokemonProfileTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.PokemonEditorActivity"
            android:configChanges="orientation"
            android:theme="@style/PokemonEditorTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".gui.activities.PreferencesActivity"
            android:configChanges="orientation"
            android:theme="@style/PreferencesTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>